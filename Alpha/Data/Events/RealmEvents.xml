<?xml version="1.0" encoding="utf-8" ?>
<events>
	<event id="realm_1" type="realm" triggered-only="true">
		<Label>A tithe has been collected in {Realm.Name}.</Label>
		<conditions>
			<condition>Realm.IsIndependant</condition>
		</conditions>
		<baseMtth>1y2m10d</baseMtth>
		<multipliers>
			<multiplier factor="2">Realm.DirectVassalCount > 1</multiplier>
			<multiplier>Realm.TaxRate*5+0.5</multiplier>
			<reducer factor ="5">Calendar.Month &gt; 1 &amp;&amp; Calendar.Month &lt; 3</reducer>
		</multipliers>
		<outcomes>
			<outcome>
				<shortDescription>Store the coins in the vaults !</shortDescription>
				<effects>
					<effect>Realm.Treasury+=Realm.Income("2m")</effect>
				</effects>
			</outcome>
			<outcome>
				<shortDescription>Distribute the money to my vassals !</shortDescription>
				<conditions>
					<condition>DirectVassalCount > 1</condition>
				</conditions>
				<effects>
					<effect>Realm.Treasury+=Realm.Income("1m")</effect>
					<effect>Realm.Treasury+=Realm.Income("1m")</effect>
				</effects>
			</outcome>
		</outcomes>
	</event>
</events>